
<div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Associar Federação</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="federacoes_modal">
        <%= form_with model: [@atleta, AtletaFederacao.new], data: { turbo_frame: "lista-federacoes" }, local: false do |f| %>
          <div class="mb-2">
            <%= f.collection_select :federacao_id, @federacoes, :id, :nome, { prompt: "Selecione a Federação" }, class: "form-select" %>
          </div>
          <div class="mb-2">
            <%= f.text_field :numero, placeholder: "Número da Federação", class: "form-control" %>
          </div>
          <div class="modal-footer">
            <div class="mt-2">
              <%= f.submit "Salvar", class: "btn btn-success" %>
            </div>
            <div class="col-md-2">
              <%= link_to  "Adicionar Federação",federacao_path(f), class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
