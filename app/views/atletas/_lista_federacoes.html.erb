<%= turbo_frame_tag "lista-federacoes" do %>
  <% if @atleta.atleta_federacoes.any? %>
    <ul class="list-group">
      <% @atleta.atleta_federacoes.each do |fed| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= fed.federacao&.nome || "Federação não definida" %>
          <span class="badge bg-primary rounded-pill"><%= fed.numero %></span>
          <%= link_to "Remover", atleta_atleta_federacao_path(@atleta, fed), 
                      method: :delete, data: { turbo_confirm: "Deseja remover?" }, class: "btn btn-sm btn-danger" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">Nenhuma federação adicionada.</p>
  <% end %>
<% end %>
