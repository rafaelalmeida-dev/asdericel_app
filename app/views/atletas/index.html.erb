<%= render "shared/context_nav", title: t("activerecord.models.atleta.other"), new_path: new_atleta_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.atleta.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :numeroSus_cont, class: "form-control", placeholder: t("activerecord.attributes.atleta.numeroSus") %>
      <%= link_to atletas_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
        <i class="ph ph-x"></i>
      <% end if params[:q] %>
    <% end %>      
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            
              <th><%= sort_link(@q, :numeroSus, t("activerecord.attributes.atleta.numeroSus")) %></th>
            
              <th><%= sort_link(@q, :peso, t("activerecord.attributes.atleta.peso")) %></th>
            
              <th><%= sort_link(@q, :altura, t("activerecord.attributes.atleta.altura")) %></th>
            
              <th><%= sort_link(@q, :pessoa, t("activerecord.attributes.atleta.pessoa")) %></th>
            
              <th><%= sort_link(@q, :camisa, t("activerecord.attributes.atleta.camisa")) %></th>
            
              <th><%= sort_link(@q, :calca, t("activerecord.attributes.atleta.calca")) %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @atletas.each do |atleta| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-eye me-2") + t("common.actions.show"), atleta_path(atleta), class: "dropdown-item" %>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_atleta_path(atleta), class: "dropdown-item" %>
                    <%= form_for atleta, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer" data-confirm-delete="<%= atleta_path(atleta) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph ph-trash-simple me-2"></i><%= t("common.actions.delete") %>
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              
                <td><%= atleta.numeroSus %></td>
              
                <td><%= atleta.peso %></td>
              
                <td><%= atleta.altura %></td>
              
                <td><%= atleta.pessoa %></td>
              
                <td><%= atleta.camisa %></td>
              
                <td><%= atleta.calca %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
