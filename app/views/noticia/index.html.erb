<%= render "shared/context_nav", title: t("activerecord.models.noticium.other"), new_path: new_noticium_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.noticium.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :titulo_cont, class: "form-control", placeholder: t("activerecord.attributes.noticium.titulo") %>
      <%= link_to noticia_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
        <i class="ph ph-x"></i>
      <% end if params[:q] %>
    <% end %>      
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            
              <th><%= sort_link(@q, :titulo, t("activerecord.attributes.noticium.titulo")) %></th>
            
              <th><%= sort_link(@q, :conteudo, t("activerecord.attributes.noticium.conteudo")) %></th>
            
              <th><%= sort_link(@q, :categoria, t("activerecord.attributes.noticium.categoria")) %></th>
            
              <th><%= sort_link(@q, :imagem, t("activerecord.attributes.noticium.imagem")) %></th>
            
              <th><%= sort_link(@q, :data_publicacao, t("activerecord.attributes.noticium.data_publicacao")) %></th>
            
              <th><%= sort_link(@q, :destaque, t("activerecord.attributes.noticium.destaque")) %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @noticia.each do |noticium| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-eye me-2") + t("common.actions.show"), noticium_path(noticium), class: "dropdown-item" %>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_noticium_path(noticium), class: "dropdown-item" %>
                    <%= form_for noticium, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer" data-confirm-delete="<%= noticium_path(noticium) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph ph-trash-simple me-2"></i><%= t("common.actions.delete") %>
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              
                <td><%= noticium.titulo %></td>
              
                <td><%= noticium.conteudo %></td>
              
                <td><%= noticium.categoria %></td>
              
                <td><%= noticium.imagem %></td>
              
                <td><%= noticium.data_publicacao %></td>
              
                <td><%= noticium.destaque %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
