<% is_left = image_position == "left" %>

<div class="row mb-4">
  <!-- Image Section -->
  <div class="col-md-6 <%= is_left ? 'order-1' : 'order-2' %>">
    <img src="<%= image.presence || '/placeholder.svg' %>"
         alt="<%= name %>"
         class="img-fluid h-100 object-cover" style="max-height: 400px; object-fit: cover;" />
  </div>

  <!-- Content Section -->
  <div class="col-md-6 bg-warning p-4 d-flex flex-column justify-content-center <%= is_left ? 'order-2' : 'order-1' %>">
    <div class="max-w-md">
      <h3 class="text-sm font-weight-bold text-primary mb-2 uppercase tracking-wide"><%= position %></h3>
      <h2 class="h4 font-weight-bold text-dark mb-4"><%= name %></h2>

      <p class="text-dark text-sm leading-relaxed mb-4">
        <%= description %>
      </p>

      <!-- Stats -->
      <div class="mt-3">
        <p class="text-xs font-weight-semibold text-muted mb-1">EXPERIÃŠNCIA</p>
        <p class="text-sm text-dark"><%= experiencia %></p>
      </div>
    </div>
  </div>
</div>
