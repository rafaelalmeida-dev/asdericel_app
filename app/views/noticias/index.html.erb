<%= render "shared/context_nav", title: t("activerecord.models.noticia.other"), new_path: new_noticia_path do %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.noticia.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, url: noticias_path, html: { class: "d-flex gap-2", autocomplete: "off" } do |f| %>
      <%= f.search_field :titulo_cont, class: "form-control", placeholder: t("activerecord.attributes.noticia.titulo", default: "Título") %>
      <% if params[:q] %>
        <%= link_to noticias_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
          <i class="ph ph-x"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            <th><%= sort_link(@q, :titulo, t("activerecord.attributes.noticia.titulo", default: "Título")) %></th>
            <th><%= sort_link(@q, :conteudo, t("activerecord.attributes.noticia.conteudo", default: "Conteúdo")) %></th>
            <th><%= sort_link(@q, :categoria, t("activerecord.attributes.noticia.categoria", default: "Categoria")) %></th>
            <th><%= sort_link(@q, :imagem, t("activerecord.attributes.noticia.imagem", default: "Imagem")) %></th>
            <th><%= sort_link(@q, :data_publicacao, t("activerecord.attributes.noticia.data_publicacao", default: "Data")) %></th>
            <th><%= sort_link(@q, :destaque, t("activerecord.attributes.noticia.destaque", default: "Destaque")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @noticias.each do |noticia| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-eye me-2") + t("common.actions.show"), noticia_path(noticia), class: "dropdown-item" %>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_noticia_path(noticia), class: "dropdown-item" %>
                    <a class="dropdown-item hand-pointer" data-confirm-delete="<%= noticia_path(noticia) %>" data-csrf-token="<%= form_authenticity_token %>">
                      <i class="ph ph-trash-simple me-2"></i><%= t("common.actions.delete") %>
                    </a>
                  </div>
                </div>
              </td>
              <td><%= noticia.titulo %></td>
              <td><%= noticia.conteudo %></td>
              <td><%= noticia.categoria %></td>
              <td><%= noticia.imagem %></td>
              <td><%= noticia.data_publicacao %></td>
              <td><%= noticia.destaque %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
