<%= render "shared/context_nav", title: t("activerecord.models.escola.other"), new_path: new_escola_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.escola.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :nome_cont, class: "form-control", placeholder: t("activerecord.attributes.escola.nome") %>
      <%= link_to escolas_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
        <i class="ph ph-x"></i>
      <% end if params[:q] %>
    <% end %>      
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            
              <th><%= sort_link(@q, :nome, t("activerecord.attributes.escola.nome")) %></th>
            
              <th><%= sort_link(@q, :inep, t("activerecord.attributes.escola.inep")) %></th>
            
              <th><%= sort_link(@q, :telefone, t("activerecord.attributes.escola.telefone")) %></th>
            
              <th><%= sort_link(@q, :municipio, t("activerecord.attributes.escola.municipio")) %></th>
            
              <th><%= sort_link(@q, :estado, t("activerecord.attributes.escola.estado")) %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @escolas.each do |escola| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-eye me-2") + t("common.actions.show"), escola_path(escola), class: "dropdown-item" %>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_escola_path(escola), class: "dropdown-item" %>
                    <%= form_for escola, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer" data-confirm-delete="<%= escola_path(escola) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph ph-trash-simple me-2"></i><%= t("common.actions.delete") %>
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              
                <td><%= escola.nome %></td>
              
                <td><%= escola.inep %></td>
              
                <td><%= escola.telefone %></td>
              
                <td><%= escola.municipio %></td>
              
                <td><%= escola.estado %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
