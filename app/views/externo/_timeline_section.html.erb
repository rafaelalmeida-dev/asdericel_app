<section class="py-5 py-md-6">
  <div class="container" style="max-width: 900px;">
    
    <!-- Title -->
    <div class="text-center mb-5">
      <h2 class="fw-bold display-6 text-dark mb-2">LINHA DO TEMPO</h2>
      <div class="mx-auto" style="width: 90px; height: 5px; background-color: #FFD700; border-radius: 50px;"></div>
    </div>

    <div class="position-relative">

      <!-- Vertical Line -->
      <div class="position-absolute top-0 start-50 translate-middle-x bg-warning"
           style="width: px; height: 100%;"></div>

      <!-- Timeline Events -->
      <div class="d-flex flex-column gap-5">

        <% timeline_events = [
          { year: 2001, image: "2001.png", title: "Fundação do Asdericel",
            description: "Início das primeiras atividades esportivas nas modalidades de atletismo e futebol de salão, em parceria com a Escola Risoleta Neves.														
Concedida a filiação junto a  Federação de Atletismo de Rondônia - FARO e Confederação Brasileira de Atletismo - CBAt														
Primeiros títulos de CAMPEÃO -(Campeão Masculino e Feminino, categorias Menores e Adultos - XXII PORTO VELHO OPEN DE ATLETISMO - REALIZAÇÃO FARO														
GABRIELA QUEIROZ RAMOS (GABI) - Primeira Medalhista da Asdericel  (Atletismo: Lançamento do Disco, 100 metros rasos, Arremesso de Peso e Salto em Distância." },

          { year: 2003, image: "2003.png", title: "Primeiros Títulos",
            description: "Inicia uma sequencia de títulos nas modalidades de Atletismo e Futsal em Nível Municipal e Estadual 										
Parceria com a Faculdade de Rondônia (FARO)  obtendo bolsa de estudos possibilitando a graduação de vários atletas. 										"},

          { year: 2009, image: "2009.png", title: "Fair Play",
            description: "Primeiro título 'Fair Play'  concedido a equpe que joga limpo com respeito às regras e ao adversário." },

          { year: 2010, image: "2010.png", title: "Título Nacional",
            description: "Primeiro Título Nacional - VI Taça Brasil de Clubes Sub 20 Feminino 1ª Divisão." },

          { year: 2012, image: "2012.png", title: "Menção de Aplauso",
            description: "Concedido pela Assembleia Legislativa do Estado de Rondônia apresentacao pela Deputada Estadual Epifânia Barbosa de Souza, pelos relevante serviços da Asdericel pelo Desporto Rondôniense																		
                          Participação na Corrida Internacional de São Silvestre - São Paulo/SP (Atletas: Celestino José de Souza e Flávio)." },

          { year: 2013, image: "2013.png", title: "Futebol 7 Society",
            description: "Incia as atividades no Futebol 7 Soccer Society." },

          { year: 2021, image: "2021.png", title: "Titulo Nacional Futebol 7 Society",
            description: "Primeiro Título Nacional na modalidade Futebol 7 Soccer Society Feminino - Campeonato Brasileiro Futebol 7 - Paranaguá/PR." },
            
          { year: 2022, image: "2022.png", title: "Pandemia",
            description: "Durante a pandemia, o clube se adapta e mantém o engajamento dos atletase e comunidade.Participa e conquista o vice-campeonato Brasilero de Futebol 7 - Adulto Feminino- Paranaguá/PR." },
            
          { year: 2023, image: "2023.png", title: "Bi-Campeão Futebol 7 Society",
            description: "Bi-Campeão Futebol 7 Soccer Sociey Adulto Feminino - Campeonato Brasileiro Futebol 7 - São Bernardo do Campo/SP." },
            
          { year: 2024, image: "2024.png", title: "Inicio do Basquetebol",
            description: "Inicia as atividades na modalidade de Basquetebol em parceria com a Igreja Às Nações." },
            
          { year: 2025, image: "2025.png", title: "Primeiro Título Internacional",
            description: "Campeão Taça Libertadores da América de Futebol 7 Soccer Society Adulto Feminino- Paranaguá/PR." }
        ] %>

        <% timeline_events.each_with_index do |event, index| %>

          <div class="row align-items-start <%= index.odd? ? 'flex-row-reverse' : '' %>">

            <!-- Text Block -->
            <div class="col-6">
              <div class="bg-white p-4 rounded shadow border-start border-4 
                  <%= index.even? ? 'border-primary text-end' : 'border-warning' %>">

                <div class="fw-bold text-warning mb-1" style="font-size: 1.6rem;">
                  <%= event[:year] %>
                </div>

                <h3 class="h5 fw-bold text-dark"><%= event[:title] %></h3>

                <p class="text-muted"><%= event[:description] %></p>
              </div>
            </div>

            <!-- Center Image -->
            <div class="col-6 position-relative">
              <div class="position-absolute start-50 translate-middle-x bg-white border border-4 border-warning 
                          rounded shadow-lg d-flex justify-content-center align-items-center"
                   style="width: 220px; height: 240px; top: -10px; overflow: hidden;">
                <%= image_tag event[:image], alt: event[:year], style: "width: 100%; height: 100%; object-fit: cover; border-radius: 4px;" %>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    </div>

    <!-- Footer message -->
    <div class="text-center mt-5">
      <p class="text-dark fs-5 fw-semibold">
        Fazemos parte dessa história gloriosa do 
        <strong>Asdericel - Clube de Campeões</strong>
      </p>
    </div>

  </div>
</section>
