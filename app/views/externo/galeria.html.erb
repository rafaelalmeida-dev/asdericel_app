<!-- Grid de Títulos -->
    <div class="row g-4" id="titulos-container">
      <% titulos.each do |titulo| %>
        <div class="col-md-6 col-lg-4 titulo-card" data-modalidade="<%= titulo[:modalidade] %>">
          <div class="card h-100 shadow-sm border-0 titulo-item">
            <!-- Header do Card -->
            <div class="card-header text-white text-center py-3" 
                 style="background: linear-gradient(135deg, #1a3a7d 0%, #e67e22 20%);">
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-white text-dark"><%= titulo[:ano] %></span>
                <h4 class="mb-0 fw-bold"><%= titulo[:titulo] %></h4>
                <span class="badge <%= titulo[:genero] == 'MASCULINO' ? 'bg-primary' : 'bg-danger' %>">
                  <%= titulo[:genero] %>
                </span>
              </div>
            </div>

            <!-- Corpo do Card -->
            <div class="card-body">
              <div class="mb-3">
                <span class="badge bg-warning text-dark mb-2">
                  <%= titulo[:modalidade].upcase %>
                </span>
                <span class="badge bg-info text-white mb-2">
                  <%= titulo[:categoria] %>
                </span>
              </div>

              <h5 class="card-title text-primary fw-bold mb-3">
                <i class="ph ph-trophy text-warning me-2"></i>
                <%= titulo[:evento] %>
              </h5>

              <div class="info-list">
                <div class="info-item mb-2">
                  <i class="ph ph-buildings text-primary me-2"></i>
                  <strong>Promotor:</strong> <%= titulo[:promotor] %>
                </div>

                <div class="info-item mb-2">
                  <i class="ph ph-map-pin text-primary me-2"></i>
                  <strong>Local:</strong> <%= titulo[:local] %>
                </div>

                <div class="info-item mb-2">
                  <i class="ph ph-map-trifold text-primary me-2"></i>
                  <strong>Município:</strong> <%= titulo[:municipio] %>
                </div>

                <% if titulo[:parceria].present? %>
                  <div class="info-item mb-2">
                    <i class="ph ph-handshake text-primary me-2"></i>
                    <strong>Parceria:</strong> <%= titulo[:parceria] %>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Footer com Destaque -->
            <div class="card-footer bg-light text-center">
              <small class="text-muted">
                <i class="ph ph-star text-warning me-1"></i>
                Título Oficial Asdericel
              </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Contador de Títulos -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="alert alert-primary text-center" role="alert">
          <h5 class="mb-0">
            <i class="ph ph-trophy me-2"></i>
            Total de <strong id="total-titulos"><%= titulos.count %></strong> títulos exibidos
          </h5>
        </div>
      </div>
    </div>

    <!-- Botão Voltar -->
    <div class="text-center mt-4">
      <%= link_to "Voltar para Home", root_path, class: "btn btn-lg btn-primary px-5" %>
    </div>

  </div>
