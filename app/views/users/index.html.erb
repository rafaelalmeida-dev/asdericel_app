<%= render "shared/context_nav", title: t("activerecord.models.user.other"), new_path: new_user_registration_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.user.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :nome_or_cpf_cont, class: "form-control", placeholder: t("activerecord.attributes.user.nome") %>
      <%= link_to users_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
        <i class="ph ph-x"></i>
      <% end if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            <th><%= sort_link(@q, :nome, t("activerecord.attributes.user.nome")) %></th>
            <th><%= sort_link(@q, :cpf, t("activerecord.attributes.user.cpf")) %></th>
            <th><%= sort_link(@q, :email, t("activerecord.attributes.user.email")) %></th>
            <th><%= sort_link(@q, :role, t("activerecord.attributes.user.role")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_user_path(user), class: "dropdown-item" %>
                    <%= link_to "#", class: "dropdown-item text-danger", data: { 
                          "bs-toggle": "modal", 
                          "bs-target": "#confirmDeleteModal", 
                          "resource-path": user_path(user)
                        } do %>
                      <i class="ph ph-trash-simple me-2"></i>Excluir
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= user.nome %></td>
              <td><%= user.cpf %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
