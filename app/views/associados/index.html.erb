<%= render "shared/context_nav", title: t("activerecord.models.associado.other"), new_path: new_associado_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.associado.other") %></span>
<% end %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :celular_cont, class: "form-control", placeholder: t("activerecord.attributes.associado.pessoa.nome") %>
      <%= link_to associados_path, class: "btn btn-outline-secondary d-flex align-items-center justify-content-center" do %>
        <i class="ph ph-x"></i>
      <% end if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center col-1"><%= t("common.table_th_actions") %></th>
            <th><%= sort_link(@q, :nome, t("activerecord.attributes.associado.pessoa.nome")) %></th>
            <th><%= sort_link(@q, :cpf, t("activerecord.attributes.associado.pessoa.cpf")) %></th>
            <th><%= sort_link(@q, :data_nascimento, t("activerecord.attributes.associado.pessoa.datanascimento")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @associados.each do |associado| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header"><%= t("common.table_dropdown_options") %></div>
                    <%= link_to content_tag(:i, "", class: "ph ph-eye me-2") + t("common.actions.show"), associado_path(associado), class: "dropdown-item" %>
                    <%= link_to content_tag(:i, "", class: "ph ph-pen me-2") + t("common.actions.edit"), edit_associado_path(associado), class: "dropdown-item" %>
                    <%= form_for associado, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer" data-confirm-delete="<%= associado_path(associado) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph ph-trash-simple me-2"></i><%= t("common.actions.delete") %>
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= associado.pessoa.nome %></td>
              <td><%= associado.pessoa.cpf %></td>
              <td><%= associado.pessoa.data_nascimento%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_navigation(@pagy) %>
  </div>
</div>
