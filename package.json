{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.18",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "jquery": "^3.7.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  },
  "scripts": {
    "build:js:esbuild": "esbuild app/javascript/application.js --bundle --sourcemap --format=esm --minify --outdir=app/assets/builds/javascript",
    "build:css:prefix": "postcss ./app/assets/stylesheets/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn run build:css:prefix",
    "build:js": "yarn run build:js:esbuild",
    "build": "yarn run build:js && yarn run build:css",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn run build:css\""
  },
  "browserslist": [
    "defaults"
  ]
}
